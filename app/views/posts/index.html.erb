<% if @posts.any? %>
  <% @posts.reverse.each do |post| %>
    <h4> <%= post.name %> </h4>
    <%= image_tag post.image.url(:thumb) %><br>
    <%= link_to "#{post.name}", post_path(post) %><br>
    <%= link_to "Delete", post_path(post), method: :delete %><br>
    <p><%= link_to 'Like', post_likes_path(post), class: 'likes-link' %>
    <span class="likes_count"> <%= post.likes.count %> </span> likes</p>

========================================
  <% end %>
<% else %>
  <br>No posts yet!
<% end %>