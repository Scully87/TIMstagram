<a href='/posts/new'>Add a post!</a><br>

<% if @posts.any? %>
  <% @posts.reverse.each do |post| %>
    <%= image_tag post.image.url(:thumb) %><br>
    <%= link_to "#{post.name}", post_path(post) %><br>
    <%= link_to "Delete", post_path(post), method: :delete %>

      <h4> <%= post.name %> </h4>

      <%= link_to 'Like', post_likes_path(post), class: 'likes-link' %>
      <span class="likes_count"> <%= post.likes.count %> </span> likes

  <% end %>
<% else %>
  No posts yet!
<% end %>